<%- include('header') %> <!-- Include navigation header -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Book Catalog - Book Library</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    /* Basic Reset */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      color: #333;
      line-height: 1.6;
      padding: 20px;
    }

    h1 {
      text-align: center;
      color: #2c3e50;
      margin-bottom: 20px;
    }

    /* Table styling */
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    table, th, td {
      border: 1px solid #ddd;
    }

    th, td {
      padding: 10px;
      text-align: left;
    }

    th {
      background-color: #2c3e50;
      color: white;
    }

    td {
      background-color: #fff;
    }

    /* Button styling */
    .issue-button {
      padding: 8px 15px;
      background-color: #3498db;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    .issue-button:hover {
      background-color: #2980b9;
    }

    /* Links styling */
    .links {
      text-align: center;
      margin-top: 20px;
    }

    .links a {
      color: #1abc9c;
      text-decoration: none;
      font-weight: bold;
      transition: color 0.3s ease;
    }

    .links a:hover {
      color: #2c3e50;
    }
  </style>
</head>
<body>

  <h1>Book Catalog</h1>

  <!-- Table to display books -->
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Genre</th>
        <th>Published Year</th>
        <th>ISBN</th>
        <th>Copies Available</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% books.forEach(book => { %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.author %></td>
          <td><%= book.genre %></td>
          <td><%= book.published_year %></td>
          <td><%= book.isbn %></td>
          <td><%= book.copies_available %></td>
          <td>
            <% if (book.copies_available > 0) { %>
              <form action="/users/books/issue/<%= book.book_id %>" method="POST">
                <button type="submit" class="issue-button">Issue</button>
              </form>
            <% } else { %>
              <span>Not Available</span>
            <% } %>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>


</body>
</html>
